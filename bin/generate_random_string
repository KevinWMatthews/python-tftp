#!/usr/bin/env python

import argparse
import random
import string
import sys

def main():
    string = create_random_data_string(number_of_bytes)
    sys.stdout.write(string)
    sys.stdout.flush()

def create_random_data_string(n_bytes):
    random_chars = (random.choice(string.printable) for i in range(n_bytes))
    return ''.join(random_chars)

if __name__ == '__main__':
    argument_parser = argparse.ArgumentParser(description='Generate a string of random data. Terminated by a single line feed character.')
    argument_parser.add_argument('number_of_bytes', type=int, help='The number of bytes contained in the string')
    args = argument_parser.parse_args()
    number_of_bytes = args.number_of_bytes

    main()
